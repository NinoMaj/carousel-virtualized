{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "declaration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "inlineSources": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ],
    "module": "esnext",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "strict": true,
    "strictFunctionTypes": false,
    "strictNullChecks": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules",
    "examples"
  ],
  "include": [
    "src/**/*"
  ]
}
